@inherits LayoutComponentBase

<div class="relative flex flex-col md:flex-row min-h-screen bg-background">
    <div class="bg-card border-r border-border md:w-[20%] md:h-screen md:sticky md:top-0">
        <SettingsNav/>
    </div>

    <main class="flex-1 flex flex-col">
        <div class="bg-card border-b border-border flex justify-between md:justify-end items-center h-14 px-4 md:sticky md:top-0 md:z-10">
            <NavLink href="/chat" class="text-sm text-muted-foreground hover:text-foreground transition-colors whitespace-nowrap ml-0 md:ml-6 no-underline">
                Back to Chat
            </NavLink>
        </div>

        <article class="flex-1 pt-6 px-6 md:px-8 pb-8">
