@page "/login"
@using Web.Common.DTOs.Auth
@using Microsoft.JSInterop
@inject AuthService AuthService
@inject AuthState AuthState
@inject NavigationManager Nav
@inject IConfiguration Configuration
@inject IJSRuntime JSRuntime

<PageTitle>Login</PageTitle>

<h1>Login</h1>

@if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger" role="alert">@_error</div>
}

<EditForm Model="_model" OnValidSubmit="HandleSubmit">
    <div class="mb-3">
        <label class="form-label">Email</label>
        <InputText class="form-control" type="email" @bind-Value="_model.Email" />
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <InputText class="form-control" type="password" @bind-Value="_model.Password" />
    </div>

    <button class="btn btn-primary" type="submit" disabled="@_isSubmitting">
        @(_isSubmitting ? "Signing in..." : "Sign in")
    </button>

    <div class="mt-3">
        <div class="d-flex justify-content-between mb-3">
            <a class="btn btn-link" href="/register">Create account</a>
            <a class="btn btn-link" href="/auth/forgot-password">Forgot password?</a>
        </div>

        <div class="text-center">
            <div class="mb-2">or</div>
            <button class="btn btn-outline-primary" type="button" @onclick="HandleGoogleSignIn"
                disabled="@(_isSubmitting || _isSubmittingGoogle)">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"
                    style="margin-right: 8px;">
                    <path
                        d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                        fill="#4285F4" />
                    <path
                        d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                        fill="#34A853" />
                    <path
                        d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                        fill="#FBBC05" />
                    <path
                        d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                        fill="#EA4335" />
                </svg>
                @(_isSubmittingGoogle ? "Signing in..." : "Sign in with Google")
            </button>
        </div>
    </div>
</EditForm>

@code {
    private LoginRequest _model = new()
    {
        Email = "",
        Password = ""
    };

    private bool _isSubmitting;
    private bool _isSubmittingGoogle;
    private string? _error;

    /*
    protected override async Task OnInitializedAsync()
    {
        if (AuthState.IsAuthenticated)
        {
