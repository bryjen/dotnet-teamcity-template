    protected override async Task OnInitializedAsync()
    {
        if (AuthState.IsAuthenticated)
        {
            Nav.NavigateTo("/todos");
            return;
        }

        // Handle Google OAuth callback - check both query params and fragment
        var idToken = GetQueryParam("id_token") ?? await GetFragmentParam("id_token");
        var error = GetQueryParam("error") ?? await GetFragmentParam("error");

        if (!string.IsNullOrWhiteSpace(error))
        {
            _error = error switch
            {
                "access_denied" => "Google sign-in was cancelled.",
                _ => "Google authentication failed. Please try again."
            };
        }
        else if (!string.IsNullOrWhiteSpace(idToken))
        {
            // Process the ID token from Google redirect
            _isSubmittingGoogle = true;
            try
            {
                var result = await AuthService.LoginWithGoogleAsync(idToken);
                if (!result.IsSuccess)
                {
                    _error = result.ErrorMessage ?? "Google authentication failed.";
                    _isSubmittingGoogle = false;
                    return;
                }

                // Success - redirect to todos (clear the URL fragment/params)
                var returnUrl = GetQueryParam("returnUrl");
                Nav.NavigateTo(string.IsNullOrWhiteSpace(returnUrl) ? "/todos" : returnUrl);
            }
            catch (Exception ex)
            {
                _error = $"An error occurred: {ex.Message}";
                _isSubmittingGoogle = false;
            }
        }
    }

    private async Task HandleGoogleSignIn()
    {
        var clientId = Configuration["Google:ClientId"];
        if (string.IsNullOrWhiteSpace(clientId))
        {
            _error = "Google Sign-In is not configured.";
            return;
        }

        // Build Google OAuth redirect URL
        var redirectUri = $"{Nav.BaseUri}login";
        var returnUrl = GetQueryParam("returnUrl");
        if (!string.IsNullOrWhiteSpace(returnUrl))
        {
            redirectUri += $"?returnUrl={Uri.EscapeDataString(returnUrl)}";
        }

        var state = Guid.NewGuid().ToString("N");
        var googleAuthUrl = $"https://accounts.google.com/o/oauth2/v2/auth?" +
        $"client_id={Uri.EscapeDataString(clientId)}&" +
        $"redirect_uri={Uri.EscapeDataString(redirectUri)}&" +
        $"response_type=id_token&" +
        $"scope=openid email profile&" +
        $"nonce={state}&" +
        $"state={state}";

        // Redirect to Google
        Nav.NavigateTo(googleAuthUrl, forceLoad: true);
    }

    [JSInvokable]
    public async Task OnGoogleSignIn(string idToken)
    {
        _error = null;
        _isSubmittingGoogle = true;

        try
        {
            if (string.IsNullOrWhiteSpace(idToken))
            {
                _error = "Failed to get Google ID token. Please try again.";
                _isSubmittingGoogle = false;
                StateHasChanged();
                return;
            }

            // Send ID token to backend for validation
            var result = await AuthService.LoginWithGoogleAsync(idToken);
            if (!result.IsSuccess)
            {
                _error = result.ErrorMessage ?? "Google authentication failed.";
                _isSubmittingGoogle = false;
                StateHasChanged();
                return;
            }

            // Success - redirect to todos
            var returnUrl = GetQueryParam("returnUrl");
            Nav.NavigateTo(string.IsNullOrWhiteSpace(returnUrl) ? "/todos" : returnUrl);
        }
        catch (Exception ex)
        {
            _error = $"An error occurred: {ex.Message}";
            _isSubmittingGoogle = false;
            StateHasChanged();
        }
    }

    private async Task HandleSubmit()
    {
        _error = null;

        if (string.IsNullOrWhiteSpace(_model.Email) || string.IsNullOrWhiteSpace(_model.Password))
        {
            _error = "Please enter your email and password.";
            return;
        }

        _isSubmitting = true;
        try
        {
            var result = await AuthService.LoginAsync(_model);
            if (!result.IsSuccess)
            {
                _error = result.ErrorMessage ?? "Login failed.";
                return;
            }

            var returnUrl = GetQueryParam("returnUrl");
            Nav.NavigateTo(string.IsNullOrWhiteSpace(returnUrl) ? "/todos" : returnUrl);
        }
        finally
        {
            _isSubmitting = false;
        }
    }


    private string? GetQueryParam(string key)
    {
        var uri = new Uri(Nav.Uri);
        var query = uri.Query.TrimStart('?').Split('&', StringSplitOptions.RemoveEmptyEntries);
        foreach (var part in query)
        {
            var kv = part.Split('=', 2);
            if (kv.Length == 2 && string.Equals(kv[0], key, StringComparison.OrdinalIgnoreCase))
            {
                return Uri.UnescapeDataString(kv[1]);
            }
        }
        return null;
    }

    private async Task<string?> GetFragmentParam(string key)
    {
        // Google OAuth returns ID token in URL fragment, need JavaScript to read it
        try
        {
            var fragment = await JSRuntime.InvokeAsync<string>("getUrlFragment");
            if (string.IsNullOrWhiteSpace(fragment))
                return null;

            var parts = fragment.TrimStart('#').Split('&', StringSplitOptions.RemoveEmptyEntries);
            foreach (var part in parts)
            {
                var kv = part.Split('=', 2);
                if (kv.Length == 2 && string.Equals(kv[0], key, StringComparison.OrdinalIgnoreCase))
                {
                    return Uri.UnescapeDataString(kv[1]);
                }
            }
        }
        catch
        {
            // JavaScript not available or error
        }
        return null;
    }
}
