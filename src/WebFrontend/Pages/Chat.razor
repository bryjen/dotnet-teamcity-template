@page "/chat"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@using WebFrontend.Components.Chat

<PageTitle>Chat</PageTitle>

<div class="min-h-screen h-screen bg-background">
    <div class="sticky top-0 z-10 border-b border-border">
        <div class="h-16 w-full bg-gradient-to-b from-background/95 via-background/70 to-transparent" />
        <div class="absolute inset-x-0 top-0 z-20 flex h-16 items-center justify-between px-4">
            <div class="text-sm font-medium tracking-wide text-foreground/80 uppercase">Live health assistant</div>
            <div class="text-xs text-muted-foreground">Connected Â· @(IsConnected ? "Yes" : "Reconnecting...")</div>
        </div>
    </div>

    <div class="flex flex-col min-h-[calc(100vh-64px)] max-h-[calc(100vh-64px)] justify-between">
        @if (Messages.Count == 0)
        {
            <div class="flex-1 flex items-center justify-center">
                <div class="text-center">
                    <div class="mb-6 flex flex-col items-center justify-center gap-2">
                        <svg class="-mb-2 w-10 h-10 text-primary" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                        </svg>
                        <h1 class="!text-4xl font-semibold text-foreground">
                            @GetGreeting()
                        </h1>
                        <span class="text-sm text-foreground">
                            How may I help you today?
                        </span>
                    </div>
                </div>
            </div>
        }
        else
        {
            @* Active Chat View *@
            <ChatMessageList Messages="Messages" IsLoading="IsLoading"/>
        }

        <ChatInput
            InputText="@InputText"
            InputTextChanged="OnInputTextChanged"
            IsLoading="@IsLoading"
            IsConnected="@IsConnected"
            OnSubmit="HandleSubmit" />
    </div>
</div>
