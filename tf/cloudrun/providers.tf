terraform {
  required_version = ">= 1.0"

  required_providers {
    google = {
      source  = "hashicorp/google"
      version = "~> 5.0"
    }
  }
}

provider "google" {
  project = var.gcp_project_id
  region  = var.gcp_region
}

# Optional: if you want to separate Cloud Run region from other resources later
locals {
  cloud_run_location = var.gcp_region
}
